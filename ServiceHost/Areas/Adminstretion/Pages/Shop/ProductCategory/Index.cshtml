@page
@model ServiceHost.Areas.Adminstretion.Pages.Shop.ProductCategory.IndexModel
@{
    ViewData["Title"] = "مدیریت دسته بندی";
}

<div class="card-box">
    <div class="row">
        <div class="col-md-12">

            <form role="form" method="post">
                <div class="col-sm-9 form-group ">

                    <input type="text" asp-for="searchModel.Name" class="form-control" id="Name" name="Name" placeholder="نام دسته بندی محصول را وارد کنید...">

                </div>
                <div>
                    <button type="submit" class="btn btn-purple waves-effect waves-light">جستجو</button>
                </div>

            </form>
        </div><!-- end col -->


    </div><!-- end row -->
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="panel">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="m-b-30">
                            <a class="btn btn-purple waves-effect waves-light" asp-page="./Create">افزودن</a>
                            @*<button type="button" asp-page="./Create" class="form-control btn btn-purple waves-effect waves-light">افزودن</button>*@
                        </div>
                    </div>
                </div>

                <div class="editable-responsive">
                    <table class="table table-striped" id="datatable-editable">
                        <thead>
                            <tr>
                                <th>نام دسته بندی</th>
                                <th>تاریخ ایجاد</th>
                                <th>وضعیت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.prdouctCategories)
                            {
                                <tr class="gradeX">
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.CreationDate
                                    </td>
                                    <td>
                                        @if (@item.IsRemoved)
                                        {
                                            <span class="text-danger">غیرفعال</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">فعال</span>
                                        }
                                    </td>
                                    <td class="actions">
                                        <button type="button" class="btn btn-primary waves-effect w-md waves-light m-b-5">ویرایش</button>
                                        @if (@item.IsRemoved)
                                        {
                                            <button type="button" class="btn btn-success waves-effect w-md waves-light m-b-5">فعالسازی</button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-danger waves-effect w-md waves-light m-b-5">غیرفعالسازی</button>
                                        }
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end: panel body -->

        </div> <!-- end panel -->
    </div> <!-- end col-->
</div>

<!-- MODAL -->
<div id="dialog" class="modal-block mfp-hide">
    <section class="panel panel-info panel-color">
        <header class="panel-heading">
            <h2 class="panel-title">آیا مطمئن هستی؟</h2>
        </header>
        <div class="panel-body">
            <div class="modal-wrapper">
                <div class="modal-text">
                    <p>آبا اطمینان داری که میخواهی این سطر رو پاک کنی؟</p>
                </div>
            </div>

            <div class="row m-t-20">
                <div class="col-md-12 text-right">
                    <button id="dialogConfirm" class="btn btn-primary waves-effect waves-light">بله</button>
                    <button id="dialogCancel" class="btn btn-default waves-effect">لغو</button>
                </div>
            </div>
        </div>

    </section>
</div>
<!-- end Modal -->

@section Script{
    <!-- Editable js -->
    <script src="~/AdminThem/assets/plugins/magnific-popup/dist/jquery.magnific-popup.min.js"></script>
    <script src="~/AdminThem/assets/plugins/jquery-datatables-editable/jquery.dataTables.js"></script>
    <script src="~/AdminThem/assets/plugins/datatables/dataTables.bootstrap.js"></script>
    <script src="~/AdminThem/assets/plugins/tiny-editable/mindmup-editabletable.js"></script>
    <script src="~/AdminThem/assets/plugins/tiny-editable/numeric-input-example.js"></script>
    <!-- init -->
    <script src="~/AdminThem/assets/pages/datatables.editable.init.js"></script>
    <script>
        $('#mainTable').editableTableWidget().numericInputExample().find('td:first').focus();
    </script>

}
